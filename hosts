# Create an OSEv3 group that contains the masters and nodes groups
[OSEv3:children]
masters
nodes
etcd

# # Set variables common for all OSEv3 hosts
[OSEv3:vars]
# # SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=base2
osm_default_subdomain=int.prod.os.aws.paycorp.com.au
#
#
# # If ansible_ssh_user is not root, ansible_sudo must be set to true
ansible_sudo=true
#
product_type=openshift
deployment_type=enterprise
#
# # uncomment the following to enable htpasswd authentication; defaults to DenyAllPasswordIdentityProvider
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/openshift/openshift-passwd'}]
#
# # host group for masters
[masters]
os3mastera.int.prod.os.aws.paycorp.com.au openshift_hostname=os3mastera.int.prod.os.aws.paycorp.com.au openshift_public_hostname=os3master.prod.openshift.aws.base2.services
os3masterc.int.prod.os.aws.paycorp.com.au openshift_hostname=os3masterc.int.prod.os.aws.paycorp.com.au openshift_public_hostname=os3master.prod.openshift.aws.base2.services
#
# # host group for etcd
[etcd]
etcd1.int.prod.os.aws.paycorp.com.au openshift_hostname=etcd1.int.prod.os.aws.paycorp.com.au
etcd2.int.prod.os.aws.paycorp.com.au openshift_hostname=etcd2.int.prod.os.aws.paycorp.com.au
etcd3.int.prod.os.aws.paycorp.com.au openshift_hostname=etcd3.int.prod.os.aws.paycorp.com.au

# # host group for nodes, includes region info
[nodes]
#os3mastera.int.prod.os.aws.paycorp.com.au openshift_hostname=os3mastera.int.prod.os.aws.paycorp.com.au openshift_node_labels="{'region': 'infra', 'zone': 'default'}"
infranodea.int.prod.os.aws.paycorp.com.au openshift_hostname=infranodea.int.prod.os.aws.paycorp.com.au openshift_node_labels="{'region': 'infra', 'zone': 'default}"
infranodec.int.prod.os.aws.paycorp.com.au openshift_hostname=infranodec.int.prod.os.aws.paycorp.com.au openshift_node_labels="{'region': 'infra', 'zone': 'default}"
nodea.int.prod.os.aws.paycorp.com.au openshift_hostname=nodea.int.prod.os.aws.paycorp.com.au openshift_node_labels="{'region': 'primary', 'zone': 'syda'}"
nodec.int.prod.os.aws.paycorp.com.au openshift_hostname=nodec.int.prod.os.aws.paycorp.com.au openshift_node_labels="{'region': 'primary', 'zone': 'sydc'}"
